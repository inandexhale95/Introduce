@model UpdateInfoViewModel

@{ 
    ViewData["Title"] = "사용자 정보수정";
}

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="User" asp-action="UpdateInfo">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <div class="text-warning">사용자 아이디는 변경하실 수 없습니다.</div>
                <input type="text" class="form-control" asp-for="UserId" value="@Context.User.Identity.Name" readonly />
                <span class="text-danger" asp-validation-for="UserId"></span>
            </div>

            <div class="form-group">
                <input type="text" class="form-control" asp-for="UserName" placeholder="User name" />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>

            <div class="form-group">
                <input type="text" class="form-control" asp-for="UserEmail" placeholder="User email" />
                <span class="text-danger" asp-validation-for="UserEmail"></span>
            </div>

            <div class="form-group">
                <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <hr />

            <button type="submit" class="btn btn-lg btn-success btn-block">정보수정</button>
        </form>
    </div>
</div>
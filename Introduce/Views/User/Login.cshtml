@model LoginViewModel

@{ 
    ViewData["Title"] = "로그인";
}


<div class="container p-3">

    <h4 class="text-center p-3 my-3 text-white">Register</h4>

    <div class="d-flex row-cols-3 justify-content-center align-items-center">
        <form asp-controller="User" asp-action="Login">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="col-lg form-floating">
                <input type="text" asp-for="UserId" class="form-control" placeholder="ID" autofocus>
                <label class="form-label text-dark">ID</label>
                <span class="text-danger" asp-validation-for="UserId"></span>
            </div>

            <div class="mt-2"></div>

            <div class="col-lg form-floating">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                <label class="form-label text-dark">Password</label>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <hr class="my-4">

            <button class="w-100 btn btn-primary btn-lg" type="submit">로그인</button>
        </form>
    </div>

</div>
